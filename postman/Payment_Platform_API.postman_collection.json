{
  "info": {
    "name": "Payment Platform API",
    "description": "Complete API collection for Payment Platform with Authentication, API Key Management, and Audit Logs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}",
      "type": "string"
    },
    {
      "key": "apiVersion",
      "value": "v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "",
      "type": "string"
    },
    {
      "key": "apiSecret",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "01. Authentication",
      "item": [
        {
          "name": "Dashboard Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept-Language",
                "value": "en"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"system-owner@pg-lit.test\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "refresh"]
            }
          },
          "response": []
        },
        {
          "name": "API Server Login (API Key)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"api_key\": \"{{apiKey}}\",\n  \"api_secret\": \"{{apiSecret}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "api", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile (Dashboard)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile (API Server)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "api", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Get Active Tokens",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/tokens",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "tokens"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "logout"]
            }
          },
          "response": []
        },
        {
          "name": "Logout All Devices",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/auth/logout-all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "auth", "logout-all"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "02. API Key Management",
      "item": [
        {
          "name": "List All API Keys",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys?page=1&per_page=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": 1,\n  \"key_name\": \"Production API Key\",\n  \"environment\": \"production\",\n  \"ip_whitelist\": [\"192.168.1.100\", \"10.0.0.50\"],\n  \"rate_limit_per_minute\": 100,\n  \"rate_limit_per_hour\": 5000,\n  \"notes\": \"Production API key for main client\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys"]
            }
          },
          "response": []
        },
        {
          "name": "Get API Key Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update API Key",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"key_name\": \"Updated Key Name\",\n  \"ip_whitelist\": [\"192.168.1.100\"],\n  \"rate_limit_per_minute\": 120,\n  \"rate_limit_per_hour\": 6000,\n  \"notes\": \"Updated configuration\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Revoke API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Security compromise suspected\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/:id/revoke",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", ":id", "revoke"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Regenerate API Secret",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/:id/regenerate-secret",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", ":id", "regenerate-secret"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Toggle API Key Status",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/:id/toggle-status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", ":id", "toggle-status"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Client API Keys",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/api-keys/client/:clientId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "api-keys", "client", ":clientId"],
              "variable": [
                {
                  "key": "clientId",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "03. Audit Logs",
      "item": [
        {
          "name": "List Audit Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/audit-logs?page=1&per_page=50&action_type=login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "audit-logs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "50"
                },
                {
                  "key": "action_type",
                  "value": "login"
                },
                {
                  "key": "date_from",
                  "value": "2026-01-01",
                  "disabled": true
                },
                {
                  "key": "date_to",
                  "value": "2026-01-31",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Audit Log Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/audit-logs/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "audit-logs", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ]
}

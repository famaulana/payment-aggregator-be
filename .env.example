# Application
APP_NAME="PaymentPlatform"
APP_ENV=local
APP_DEBUG=true
APP_URL=https://pg.lit.test

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=db_pg_lit
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Passport Configuration
PASSPORT_ACCESS_TOKEN_TTL=60
PASSPORT_REFRESH_TOKEN_TTL=30
PASSPORT_PAT_TOKEN_TTL=90

# FE Dashboard Client (With Refresh Token - 30 days)
PASSPORT_DASHBOARD_CLIENT_ID=f76e27d8-52ff-4935-9fdc-6b680ca85330
PASSPORT_DASHBOARD_CLIENT_SECRET=CHANGE_THIS_IN_PRODUCTION

# API Server Client (No Refresh Token - 60 min access token only)
PASSPORT_API_SERVER_CLIENT_ID=7b052249-a571-4612-92b3-a0eb5191413f
PASSPORT_API_SERVER_CLIENT_SECRET=CHANGE_THIS_IN_PRODUCTION

# Personal Access Client
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_MAX_ATTEMPTS=60
RATE_LIMIT_DEFAULT_DECAY_MINUTES=1

# API Security
API_KEY_IP_WHITELIST_ENABLED=true
API_SIGNATURE_ENABLED=true
API_SIGNATURE_TOLERANCE_SECONDS=300

# Application Settings
TIMEZONE=Asia/Jakarta
DEFAULT_CURRENCY=IDR
SUPPORTED_CURRENCIES=IDR,USD,SGD
